<%= simple_form_for @stock, :validate => true do |f| %>
  <%= form_errors(f) %>

  <legend>Add Stock to Portfolio</legend>
    <div class="controls">
      <%= f.input :symbol %>
    </div>
    <div class="controls">
      <%= f.input :quantity %>
    </div>
    <div class="controls">
      <%= f.input :purchase_price %>
    </div>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary', :value => "Create", :confirm => "Are you sure?" %>
    <%= link_to "Cancel", stocks_path, :class=> "btn btn-danger" %>
  </div>
<% end %>